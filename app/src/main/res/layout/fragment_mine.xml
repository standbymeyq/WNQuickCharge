<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.optimumnano.quickcharge.fragment.MineFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <com.optimumnano.quickcharge.views.CircleImageView
        android:id="@+id/mine_ivHead"
        android:layout_width="@dimen/default_headwidth"
        android:layout_height="@dimen/default_headwidth"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/default_padding20"
        android:src="@drawable/head"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_textsize16"
        android:textColor="@color/color33"
        android:text="Cral"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/default_padding"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_color"
            android:textSize="@dimen/default_textsize14"
            android:layout_centerVertical="true"
            android:text="充值"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_textsize20"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:text="0.00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_color"
            android:textSize="@dimen/default_textsize14"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="提现"/>
    </RelativeLayout>

    <com.optimumnano.quickcharge.views.MenuItem1
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tvLeftText="我的钱包"
        app:showivRight="true"/>
    <com.optimumnano.quickcharge.views.MenuItem1
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tvLeftText="我的优惠券"
        android:layout_marginTop="1dp"
        app:showivRight="true"/>
    <com.optimumnano.quickcharge.views.MenuItem1
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tvLeftText="我的收藏"
        android:layout_marginTop="1dp"
        app:showivRight="true"/>
    <com.optimumnano.quickcharge.views.MenuItem1
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tvLeftText="设置"
        android:layout_marginTop="1dp"
        app:showivRight="true"/>
    <com.optimumnano.quickcharge.views.MenuItem1
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tvLeftText="邀请好友"
        android:layout_marginTop="1dp"
        app:showivRight="true"/>
    <com.optimumnano.quickcharge.views.MenuItem1
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tvLeftText="关于我们"
        android:layout_marginTop="1dp"
        app:showivRight="true"/>

    </LinearLayout>


</ScrollView>
